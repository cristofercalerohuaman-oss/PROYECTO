{
  "version": 2,
  "builds": [
    {
      "src": "gestion_flota/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "buildCommand": "pip install -r requirements.txt && pip install psycopg2-binary && python manage.py migrate --noinput && python manage.py collectstatic --noinput"
      }
    },
    {
      "src": "staticfiles/(.*)",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "gestion_flota/wsgi.py"
    }
  ]
}